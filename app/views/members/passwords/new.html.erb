<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
      <!-- Register -->
      <div class="card">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center">
            <a href="index.html" class="app-brand-link gap-2">

              <span class="app-brand-text demo text-body fw-bolder">Gym Manager</span>
            </a>
          </div>
          <!-- /Logo -->
          <h4 class="mb-2">Forgot Password? ðŸ”’</h4>
          <p class="mb-4">Enter your email and we'll send you instructions to reset your password</p>

          <%= form_for(resource, as: resource_name, id: "formAuthentication" ,class: "mb-3", url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "admins/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>

              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
            </div>
            <div class="mb-3 form-password-toggle">

              <div class="mb-3">
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary d-grid w-100" %>
              </div>
          <%end%>

          <p class="text-center">
            <span>New on our platform?</span>
            <a href="auth-register-basic.html">
              <span><%= render "admins/shared/links" %></span>

            </a>
          </p>
          </div>
        </div>
        <!-- /Register -->
      </div>
    </div>
  </div>
