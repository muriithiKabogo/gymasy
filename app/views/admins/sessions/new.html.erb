    <div class="container-xxl">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
          <!-- Register -->
          <div class="card">
            <div class="card-body">
              <!-- Logo -->
              <div class="app-brand justify-content-center">
                <a href="index.html" class="app-brand-link gap-2">
                  
                  <span class="app-brand-text demo text-body fw-bolder">Gym Manager</span>
                </a>
              </div>
              <!-- /Logo -->
              <h4 class="mb-2">Welcome to Gym Manager! ðŸ‘‹</h4>
              <p class="mb-4">Please sign-in to your account and start the adventure</p>

            
                <%= form_for(resource, as: resource_name, id: "formAuthentication" ,class: "mb-3", url: session_path(resource_name)) do |f| %>
                <div class="mb-3">
                  <%= f.label :email, class: "form-label" %>
                  
                   <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
                </div>
                <div class="mb-3 form-password-toggle">
                  <div class="d-flex justify-content-between">
                  
                    <%= f.label :password, class: "form-label" %>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                     <small> <%= link_to "Forgot your password?", new_password_path(resource_name) %></small>
                    <% end %>
                  </div>
                  <div class="input-group input-group-merge">
                  

                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: '............' %>
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                  </div>
                </div>
                <div class="mb-3">

                  
                    <% if devise_mapping.rememberable? %>
                  <div class="form-check">
                    <%= f.check_box :remember_me, class: "form-check-input" , id: "remember-me" %>
                    <%= f.label :remember_me, class: "form-check-label" %>
                  </div>
                    <% end %>
                </div>
                <div class="mb-3">
                  <%= f.submit "Log in", class: "btn btn-primary d-grid w-100" %>
                </div>
              <%end%>

              <p class="text-center">
                <span>New on our platform?</span>
                <a href="auth-register-basic.html">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <span><%= link_to "Sign up", new_registration_path(resource_name) %></span>
                  <% end %>
                </a>
              </p>
            </div>
          </div>
          <!-- /Register -->
        </div>
      </div>
    </div>

